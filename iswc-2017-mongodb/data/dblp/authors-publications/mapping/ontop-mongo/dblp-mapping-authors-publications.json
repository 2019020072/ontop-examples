{
    "prefixes": {
        "xsd:" : "http://www.w3.org/2001/XMLSchema#",
        "rdfs:" : "http://www.w3.org/2000/01/rdf-schema#",
        ":" : "http://dblp.l3s.de/d2r/",
        "foaf:" : "http://xmlns.com/foaf/0.1/",
        "swrc:" : "http://swrc.ontoware.org/ontology#",
        "dcterms:" : "http://purl.org/dc/terms/",
        "dc:" : "http://purl.org/dc/elements/1.1/"
    },
    "mappings": [
        {
            "mappingId": "Author",
            "source": {
                "collection": "authors",
                "criteria": {

                }
            },
            "target": ":authors/{_id} a :Author ; foaf:name {name}^^xsd:string ; foaf:homepage {homepage}^^xsd:string . "
        },
        {
            "mappingId": "Journal papers",
            "source": {
                "collection": "authors",
                "criteria": {
                }
            },
            "target": ":journals/{publications.article.#.dblp_key} dc:creator :authors/{_id} . "
        },
        {
            "mappingId": "Conference papers",
            "source": {
                "collection": "authors",
                "criteria": {
                }
            },
            "target": ":inproceedings/{publications.inproceedings.#.dblp_key} dc:creator :authors/{_id} . "
        },
        {
            "mappingId": "Collections",
            "source": {
                "collection": "authors",
                "criteria": {
                    //"publications.incollection" : {"$exists": true}
                }
            },
            "target": ":collections/{publications.incollection.#.dblp_key} dc:creator :authors/{_id} . "
        },
        {
            "mappingId": "Journal publications",
            "source": {
                "collection": "publications",
                "criteria": {
                    "type" : "article"
                }
            },
            "target": ":journals/{_id} a :JournalArticle ; a :Publication ; dc:title {title}^^xsd:string ; dcterms:issued {year}^^xsd:integer ; swrc:pages {pages}^^xsd:string ; :appearsIn {in}^^xsd:string ; foaf:homepage {url}^^xsd:string . "
        },
        {
            "mappingId": "Conference publications",
            "source": {
                "collection": "publications",
                "criteria": {
                    "type" : "inproceedings"
                }
            },
            "target": ":inproceedings/{_id} a :ConferencePaper ; a :Publication ; dc:title {title}^^xsd:string ; dcterms:issued {year}^^xsd:integer ; swrc:pages {pages}^^xsd:string ; foaf:homepage {url}^^xsd:string ; :appearsIn {booktitle}^^xsd:string . "
        },
	    {
            "mappingId": "Book chapters",
            "source": {
                "collection": "publications",
                "criteria": {
                    "type" : "incollection"
                }
            },
            "target": ":collections/{_id} a :BookChapter ; a :Publication ; dc:title {title}^^xsd:string ; dcterms:issued {year}^^xsd:integer ; swrc:pages {pages}^^xsd:string ; foaf:homepage {url}^^xsd:string ;  :appearsIn {booktitle}^^xsd:string . "
        }
    ]
}
